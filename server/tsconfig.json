{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "removeComments": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "./server/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["**/node_modules"]
}
